@using Microsoft.AspNetCore.Http;
@model EmployeeModel
@{
    ViewData["Title"] = "Bestellsystem - Aspöck";
    var username = Context.Session.GetString("username");
}

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <img src="~/images/bestellsystem_logo_weiß.png" alt="bild" class="img-responsive" width="80" height="35" style="margin: 10px 10px 10px 30px" />
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    <div class="dropdown">
                        <button class="dropbtn">@username</button>
                        <div class="dropdown-content">
                            <a href="#">Meine Bestellungen</a>
                            <a href="#">Profil bearbeiten</a>
                            <a asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>



<div>
    <select class="category_dropdown">
        <option class="category_option">Alle Produkte</option>
        @foreach (var category in Model.Categories)
        {
            <option class="category_option">@category.Name</option>
        }
    </select>

    <select class="category_dropdown">
        <option class="category_option">Alle Lieferanten</option>
        @foreach (var supplier in Model.SupplierProperties)
        {
            <option class="category_option">@supplier.CompanyName</option>
        }
    </select>

    
</div>


<style>
    .dropdown_menu {
        width: 300px;
        display: inline-block;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 2px rgb(204, 204, 204);
        transition: all .5s ease;
        position: relative;
        font-size: 14px;
        color: #474747;
        height: 100%;
        text-align: left;
        outline: 0;
    }

        .dropdown_menu .select {
            cursor: pointer;
            display: block;
            padding: 10px
        }

            .dropdown_menu .select > i {
                font-size: 13px;
                color: #888;
                cursor: pointer;
                transition: all .3s ease-in-out;
                float: right;
                line-height: 20px
            }

        .dropdown_menu:hover {
            box-shadow: 0 0 4px rgb(204, 204, 204)
        }

        .dropdown_menu:active {
            background-color: #f8f8f8
        }

        .dropdown_menu.active:hover,
        .dropdown_menu.active {
            box-shadow: 0 0 4px rgb(204, 204, 204);
            border-radius: 5px 5px 0 0;
            background-color: #f8f8f8
        }

            .dropdown_menu.active .select > i {
                transform: rotate(-90deg)
            }

        .dropdown_menu .dropdown_menu_select {
            position: absolute;
            background-color: #fff;
            width: 100%;
            left: 0;
            margin-top: 1px;
            box-shadow: 0 1px 2px rgb(204, 204, 204);
            border-radius: 0 1px 5px 5px;
            overflow: hidden;
            display: none;
            max-height: 144px;
            overflow-y: auto;
            z-index: 9
        }

            .dropdown_menu .dropdown_menu_select li {
                padding: 10px;
                transition: all .2s ease-in-out;
                cursor: pointer
            }

        .dropdown_menu .dropdown_menu_select {
            padding: 0;
            list-style: none
        }

            .dropdown_menu .dropdown_menu_select li:hover {
                background-color: #f2f2f2
            }

            .dropdown_menu .dropdown_menu_select li:active {
                background-color: #e2e2e2
            }

    .category_dropdown {
        background-color: #ffc107;
        color: white;
        padding: 16px;
        top: -10px;
        font-size: 16px;
        border: none;
    }

    .category_option {
        background-color: #f1f1f1;
        color: black;
        border: none;
        padding: 12px 16px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    }

    .category_option:hover {
        background-color: #ffc107;
    }


    .navbar-collapse {
        float: right;
        text-align: center;
    }

    .dropbtn {
        background-color: #ffc107;
        color: white;
        padding: 14px;
        margin-top: 9px;
        font-size: 16px;
        border: none;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
        right: 0;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }

            .dropdown-content a:hover {
                background-color: #ffc107;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #e6ac00;
    }

    .body-content {
        padding-left: 15px;
        padding-right: 15px;
        padding-top: 30px;
    }
</style>
